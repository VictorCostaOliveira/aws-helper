<h1>Bucket: <%= @bucket.name%></h1>

<p id="notice"><%= notice %></p>
<%= link_to 'Voltar', buckets_path %>
<div class="card mt-3">
  <div class="card-body">
    <p>
      <h4>Name</h4>
      <%= @bucket.name %>
    </p>

    <p>
      <h4>Policy name</h4>
      <%= @bucket.policy_name %>
    </p>

    <p>
      <h4>Bucket user name</h4>
      <%= @bucket.bucket_user_name %>
    </p>
  </div>
</div>
